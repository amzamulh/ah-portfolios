{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],

    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",

    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,

    "baseUrl": "src",
    "paths": {
      "@ui/atoms": ["components/atoms"],
      "@ui/atoms/*": ["components/atoms/*"],
      "@ui/utils": ["components/utils"],
      "@ui/utils/*": ["components/utils/*"],
      "@ui/styles": ["styles"],
      "@ui/styles/*": ["styles/*"]
    },

    "noEmit": true
  },
  "include": ["src", "vite.config.ts"],
  "exclude": ["dist", "node_modules"]
}
