{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "jsx": "react-jsx",
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@ah/anzamhui": ["./ahui/src/index.ts"],
      "@ah/anzamhui/*": ["./ahui/src/*"]
    },
    "types": ["vite/client", "@testing-library/jest-dom", "vitest/globals"]
  },
  "include": [
    "ahui/src",
    "src", 
    "test", 
    "tests", 
    "stories", 
    "vite.config.ts",
    "vite.lib.config.ts",
    ".storybook/**/*",
    "src/test/**/*"
  ],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" },
    { "path": "./tsconfig.lib.json" }
  ]
}